{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,

        "strict": true,
        "strictFunctionTypes": true,

        "noEmit": true,

        "esModuleInterop": true,
        "module": "esnext",

        "moduleResolution": "node",
        "isolatedModules": true,

        "resolveJsonModule": true,

        "jsx": "preserve",
        "incremental": true,

        "plugins": [
            {
                "name": "next"
            }
        ],

        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@styles/*": ["styles/*"],
            "@UI/*": ["UI/*"],

            "@shared/*": ["../shared/*"]
        },
        "types": ["jest", "node"]
    },

    "references": [{ "path": "../shared" }],

    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "eslint.config.—Åjs"
    ],
    "exclude": ["node_modules", ".next"]
}
