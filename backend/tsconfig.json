{
    "compilerOptions": {
        "module": "ESNext",
        "target": "esnext",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,

        "noUncheckedIndexedAccess": true,

        "isolatedModules": true,
        "moduleDetection": "force",

        "noUncheckedSideEffectImports": true,
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
}
