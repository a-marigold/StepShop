{
    "compilerOptions": {
        "module": "ESNext",
        "target": "esnext",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "noUncheckedIndexedAccess": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
}
